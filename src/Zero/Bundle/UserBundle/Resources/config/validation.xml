<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Zero\Bundle\UserBundle\Entity\User">
        <property name="username">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">4</option>
                <option name="max">255</option>
            </constraint>
        </property>

        <property name="email">
            <constraint name="NotBlank"/>
            <constraint name="Email"/>
        </property>

        <property name="displayName">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">4</option>
                <option name="max">255</option>
            </constraint>
        </property>

        <property name="groups">
            <constraint name="Count">
                <option name="min">1</option>
                <option name="minMessage">You must specify at least one group</option>
            </constraint>
        </property>

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>username</value>
            </option>
            <option name="message">This username is already in use.</option>
        </constraint>

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>email</value>
            </option>
            <option name="message">This email is already in use.</option>
        </constraint>
    </class>

    <class name="Zero\Bundle\UserBundle\Entity\User\Group">
        <property name="name">
            <constraint name="NotBlank"/>
            <constraint name="Length">
                <option name="min">4</option>
                <option name="max">255</option>
            </constraint>
        </property>

        <property name="roles">
            <constraint name="Count">
                <option name="min">1</option>
                <option name="minMessage">You must specify at least one role</option>
            </constraint>
        </property>

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>name</value>
            </option>
            <option name="message">This name is already in use.</option>
        </constraint>
    </class>

</constraint-mapping>
